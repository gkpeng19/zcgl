        $("#btnSave").click(function () {
            var updateRows = 0;
            var rows = $("#operateList").datagrid("getRows"); //这段代码是获取当前页的所有行。
            //debugger;
            var idschecks = "0";
            var idsunchecks = "0";
            for (var i = 0; i < rows.length; i++) {
                var setFlag = $("td[field='IsVaild_G'] input").eq(i).prop("checked");
                var ids = rows[i].ID;
                if (setFlag)
